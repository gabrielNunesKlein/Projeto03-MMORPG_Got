<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% for(var i = 0; i < acoes.length; i++){ %>
			<%
				var acao_texto = '';
				switch(parseInt(acoes[i].acao)){
					case 1: acao_texto = 'aldeão(ões) coletando recursos'; break;
					case 2: acao_texto = 'enforcamento(s) programado'; break;
					case 3: acao_texto = 'aldeão(ões) em treinamento de história'; break;
					case 4: acao_texto = 'aldeão(ões) em treinamento de magia'; break;
				}

				var date = new Date();
				var momento_atual = date.getDate();

				var segundos_restantes = Math.round((acoes[i].acao_termina_em - momento_atual) / 1000);
			%>
			<li>
				<%=acoes[i].quantidade%> <%=acao_texto%>
				- <small>restam <span class="tempo_restante"><%=segundos_restantes%></span> - 
					<a href="/revogar_acao?id_acao=<%=acoes[i]._id%>">revogar ordem</a></small>
			</li>
		<% } %>
	</ul>
</div>